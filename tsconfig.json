{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "allowJs": true,
    "jsxFactory": "Nerv.createElement"
  },

  "include": [
    "src/**/*",
    "interfaces/externals.d.ts",
    "client/main.tsx"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
